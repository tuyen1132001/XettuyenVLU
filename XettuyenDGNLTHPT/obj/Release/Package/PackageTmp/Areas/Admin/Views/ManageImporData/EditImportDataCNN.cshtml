@model XettuyenDGNLTHPT.Models.tblChungChiNN
@{
    ViewBag.Title = "EditImportDataCNN";
    Layout = "~/Areas/Admin/Views/Shared/_adminlayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-12 col-lg-12 col-sm-12">
                <div class="white-box">
                    <h3>Chỉnh sửa Chứng Chỉ</h3>
                    <form class="bg-light p-4 m-4">
                        <div class="form-group">
                            <label for="yourmail">Mã Ngoại Ngữ<span class="required" style="color:red"> * </span></label>
                            @Html.EditorFor(model => model.MaNN, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.MaNN, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="yourmail">Chứng Chỉ<span class="required" style="color:red"> * </span></label>
                            @Html.EditorFor(model => model.ChungChi, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.ChungChi, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="yourmail">Điểm Quy Đổi<span class="required" style="color:red"> * </span></label>
                            @Html.EditorFor(model => model.DiemQuiDoi, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.DiemQuiDoi, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn-messger btn btn-success" />
                            </div>
                        </div>
                    </form>

                </div>

            </div>

        </div>

    </div>


}

