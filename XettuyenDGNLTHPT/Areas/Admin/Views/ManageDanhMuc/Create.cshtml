@model XettuyenDGNLTHPT.Models.DanhMuc

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_adminlayout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="page-wrapper">
        <div class="page-breadcrumb bg-white">
            <div class="row align-items-center">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <h4 style="padding-top: 10px;" class="page-title">Quản Lý Danh Mục</h4>
                </div>

            </div>
        </div>
        <div class="container-fluid">

            <div class="row">
                <div class="col-md-12 col-lg-12 col-sm-12">
                    <div class="white-box">
                        <h3>Thêm Danh Mục</h3>
                        <form class="bg-light p-4 m-4">
                            <div class="form-group">
                                <label for="yourmail">Tên Danh Mục</label>
                                @Html.EditorFor(model => model.TenDanhMuc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TenDanhMuc, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label for="yourmail">Mô tả</label>
                                @Html.EditorFor(model => model.motaDanhMuc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.motaDanhMuc, "", new { @class = "text-danger" })
                            </div>
                            <button class="btn-messger btn btn-success btn-save" onclick="document.getElementById('id01').style.display='block'">Thêm</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
}
